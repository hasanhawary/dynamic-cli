#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use HasanHawary\DynamicCli\Console\DCrudMakeCommand;

// Try to load Laravel project's autoload if available
$projectAutoload = getcwd() . '/vendor/autoload.php';
if (file_exists($projectAutoload)) {
    require_once $projectAutoload;
}

$app = new Application('Dynamic CLI', '1.0.0');

// Register your command(s)
$app->add(new DCrudMakeCommand());

// Run the CLI
$app->run();
